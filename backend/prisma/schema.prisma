generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  number    String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  Address   Address[]
}

model Address {
  id       Int    @id @default(autoincrement())
  cep      String
  city     String
  district String
  street   String
  houseNum Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model Products {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  image       String
  price       Float
  sizes       String
  colors      String
  quantity    Int
  avaiable    Boolean    @default(true)
  category    Categories @relation(fields: [categoryId], references: [id])
  categoryId  Int
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  products Products[]
}
