generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  number    String  @unique
  password  String
  isAdmin   Boolean @default(false)

  Address Address[]
  Orders  Orders[]
  Coupon  Coupon[]
}

model Address {
  id       Int    @id @default(autoincrement())
  cep      String
  city     String
  district String
  street   String
  houseNum Int
  userId   Int

  user User @relation(fields: [userId], references: [id])
}

model Products {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  image       String
  price       Float
  colors      String
  quantity    Int
  avaiable    Boolean @default(true)
  categoryId  Int
  slug        String  @unique

  sizes        Sizes[]
  category     Categories     @relation(fields: [categoryId], references: [id])
  OrderProduct OrderProduct[]
}

model Categories {
  id   Int    @id @default(autoincrement())
  name String @unique

  products Products[]
}

model Sizes {
  id   Int    @id @default(autoincrement())
  size String @unique

  products     Products[]
  OrderProduct OrderProduct[]
}

model Orders {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  userId     Int
  price      Float
  paid       Boolean  @default(false)
  received   Boolean  @default(false)

  orderProducts OrderProduct[]
  user          User           @relation(fields: [userId], references: [id])
}

model OrderProduct {
  id        Int @id @default(autoincrement())
  orderId   Int
  productId Int
  sizeId    Int
  quantity  Int

  order   Orders   @relation(fields: [orderId], references: [id])
  product Products @relation(fields: [productId], references: [id])
  size    Sizes    @relation(fields: [sizeId], references: [id])

  @@unique([orderId, productId, sizeId])
}

model Coupon {
  id         Int     @id @default(autoincrement())
  code       String  @unique
  percentage Boolean
  quantity   Int
  valid      Boolean @default(true)
  minimum    Int     @default(0)
  userId     Int?

  user User? @relation(fields: [userId], references: [id])
}
